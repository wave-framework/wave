{
    "name": "wave-framework/wave",
    "type": "library",
    "description": "Wave is a lightweight PHP MVC framework",
    "keywords": [
        "framework",
        "mvc",
        "orm",
        "lightweight",
        "controllers",
        "models",
        "views"
    ],
    "homepage": "http://github.com/wave-framework/wave",

    "authors": [{
            "name": "Patrick Hindmarsh",
            "email": "patrick@hindmar.sh",
            "homepage": "https://github.com/phindmarsh"
        },
        {
            "name": "Michael Calcinai",
            "email": "michael@calcin.ai"
        }
    ],

    "bin": ["bin/wave"],

    "require": {
        "php": ">=7.4",
        "twig/twig": "1.*",
        "monolog/monolog": "1.*"
    },

    "require-dev": {
        "phpunit/phpunit": "3.7.*"
    },

    "autoload": {
        "psr-0": {
            "PostInstall": "bin/composer",
            "Wave": "src"
        }
    }

}